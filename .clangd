CompileFlags:
  CompilationDatabase: ${workspaceFolder}
  Add:
    - "-std=c++17"
    - "-I${workspaceFolder}/fonts"
    - "-I${workspaceFolder}/images"
    - "-I${workspaceFolder}/include"
    - "-I${workspaceFolder}/examples"
    - "-I${workspaceFolder}/src"
    - "-I/opt/homebrew/Cellar/sdl2/2.32.2/include/SDL2"
    - "-I/opt/homebrew/Cellar/sdl2_image/2.8.8/include/SDL2"
    - "-I/opt/homebrew/Cellar/sdl2_ttf/2.24.0/include/SDL2"
